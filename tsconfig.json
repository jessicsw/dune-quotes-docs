{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "outDir": "build",
    "lib": ["DOM"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "CommonJS"
  },
  "typeAcquisition": {
    "enable": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*.tsx"],
  "exclude": ["node_modules"]
}
